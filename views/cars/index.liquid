{% layout 'layout.liquid' %}
{% block content %}
    {% if cars.length > 0 %}
    <div class="container-md"> 
        <h2>All Cars</h2>
        <div class="row">
            {% for car in cars %}
                <div class="card me-3 mb-3" style="width: 18rem;">
                    <h5 class="card-header">{{car.make}}</h5>
                    <div class="card-body">
                        <p class="card-text">Vehicle Model: {{ car.model }}</p>
                        <div class="yearBox mb-2">Year: {{ car.year }}</div>
                        <h5 class="card-title">
                            {% if car.goodToDrive %}
                                Ready to Go
                            {% else %}
                                Needs Repair
                            {% endif %}
                        </h5>
                        <a href="/cars/{{car.id}}" class="btn btn-warning">View {{ car.make }}</a>
                        </div>
                </div>
            {% endfor %}
        </div>
    </div>
  {% else %}
    <div class="container-md">
      <h2>No cars yet... Go create some!</h2>
    </div>
  {% endif %}
{% endblock %}